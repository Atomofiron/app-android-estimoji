<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="isDarkTheme">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorMain">@color/black</item>
        <item name="appBarOverlayInverted">@style/AppTheme.AppBarOverlay.Light</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">100dp</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <!--<item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>-->

        <item name="buttonStyle">@style/Button.Light</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Activity">
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>

    <style name="Button.Light" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Activity.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="isDarkTheme">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorMain">@color/white</item>
        <item name="appBarOverlayInverted">@style/AppTheme.AppBarOverlay.Dark</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">100dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:background"></item>-->
    </style>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorMain">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorMain">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
